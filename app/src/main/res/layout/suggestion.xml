<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:background="#8000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="生活建议"
        android:textColor="#fff"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/sugg_comfort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textColor="#fff"
        android:text="舒适度xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        />
    <TextView
        android:id="@+id/sugg_carWash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textColor="#fff"
        android:text="洗车指数xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        />
    <TextView
        android:id="@+id/sugg_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textColor="#fff"
        android:text="运动建议xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        />
</LinearLayout>